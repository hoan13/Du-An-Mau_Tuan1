<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/themtv_img_anhnen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/avt_cd"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tên Đăng Nhập:"
        android:textColor="#3F51B5"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/themtv_ed_tendangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Họ Và Tên:"
        android:textColor="#3F51B5"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/themtv_ed_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Năm Sinh:"
        android:textColor="#3F51B5"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/themtv_ed_ns"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới :"
        android:layout_marginLeft="10dp"
        android:textColor="#3F51B5"
        android:textSize="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/themtv_ed_mk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại Mật khẩu mới :"
        android:textColor="#3F51B5"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true" >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/themtv_ed_nlmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/themtv_btn_dangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÝ" />

        <Button
            android:id="@+id/themtv_btn_xemds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XEM DS"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>

</LinearLayout>